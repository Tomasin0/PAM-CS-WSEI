<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="144dp"
        android:text="Ustawienia"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_setting_1"
        android:layout_width="411dp"
        android:layout_height="64dp"
        android:layout_marginTop="70dp"
        android:padding="16dp"
        android:text="Pierwsze ustawienie"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edit_setting_1"
        android:layout_width="296dp"
        android:layout_height="77dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="58dp"
        android:hint="Wprowadź wartość"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_setting_1" />

    <CheckBox
        android:id="@+id/checkbox_setting_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="116dp"
        android:padding="16dp"
        android:text="Drugie ustawienie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_setting_1" />


</androidx.constraintlayout.widget.ConstraintLayout>