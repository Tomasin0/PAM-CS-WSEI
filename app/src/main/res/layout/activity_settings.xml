<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustawienia"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/text_setting_1"
        android:layout_width="411dp"
        android:layout_height="64dp"
        android:padding="16dp"
        android:text="Pierwsze ustawienie"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="248dp" />

    <EditText
        android:id="@+id/edit_setting_1"
        android:layout_width="296dp"
        android:layout_height="77dp"
        android:hint="Wprowadź wartość"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="447dp" />

    <CheckBox
        android:id="@+id/checkbox_setting_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Drugie ustawienie"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="535dp" />



</androidx.constraintlayout.widget.ConstraintLayout>